rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la tabla de usuarios autorizados
    match /whitelisted_users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Reglas para gastos y kms
    match /expenses/{expenseId} {
      allow read, write: if request.auth != null;
    }
    match /kms/{kmId} {
      allow read, write: if request.auth != null;
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
